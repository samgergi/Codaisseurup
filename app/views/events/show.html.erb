<div class="panel panel-primary">
  <div class="panel-heading"><%= @event %></div>

  <div class="panel-body">

    <p>location: <%= @event.location %></p>
    <p>Host: <%= @event.user.email %></p>

    <!-- Main Info -->
    <h4>Main Info</h4>

    <p><%= @event.price %> <%= @event.price %></p
    <p><%= @event.starts_at %> <%= @event.starts_at %></p>
    <p><%= @event.ends_at %> <%= @event.ends_at %></p>
    <p><%= @event.capacity %> <%= @event.capacity %></p>

    <!-- About -->
    <h4>About</h4>
    <p><%= @event.description %></p>

    <!-- Amenities -->
    <h4>Amenities</h4>
    <ul class="amenities">
      <li><%= !@event.includes_food ? ("<s>Food</s>").html_safe : "Food" %></li>
      <li><%= !@event.includes_drinks ? ("<del>Drinks</del>").html_safe : "Drinks" %></li>

    </ul>

  </div>

</div>

<%= link_to "Back", events_path, class: "btn btn-default" %>
